# My polybar config

[colors]
background =    #2d2d2d
foreground =    #cccccc
selection  =    #515151
currline   =    #393939
comment    =    #999999
red        =    #f2777a
orange     =    #f99157
yellow     =    #ffcc66
green      =    #99cc99
aqua       =    #66cccc
blue       =    #6699cc
purple     =    #cc99cc

[bar/hampus]
width = 100%
height = 40

background =    ${colors.background}
foreground =    ${colors.foreground}

line-size = 5
line-color = #f00

border-size = 0

padding-left = 2
padding-right = 2

module-margin-left = 2
module-margin-right = 2

font-0 = Fira:antialias=true:pixelsize=12;3
font-1 = unifont:fontformat=truetype:size=12:antialias=false;0
font-2 = FontAwesome:pixelsize=12;3

modules-left = i3
modules-center =  
modules-right = volume memory cpu wlan eth temperature date pkg battery powermenu

tray-position = right
tray-padding = 2
trat-detached = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 2

# focused = Active workspace on focused monitor
label-focused = %icon% %name%
label-focused-foreground = ${colors.foreground}
label-focused-background = ${colors.background}
label-focused-padding = 3

# unfocused = Inactive workspace on any monitor
label-unfocused = %icon% %name%
label-unfocused-foreground = ${colors.selection}
label-unfocused-padding = 3

# visible = Active workspace on unfocused monitor
label-visible = %icon% %name%
label-visible-padding = ${self.label-focused-padding}
label-visible-background = ${self.label-focused-background}

# urgent = Workspace with urgency hint set
label-urgent = %icon% %name%
label-urgent-background = ${colors.red}
label-urgent-padding = 5

ws-icon-0 = Desktop;

[module/xbacklight]
type = internal/xbacklight

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
label = %percentage%%
format-padding = 2
format-foreground = ${colors.green}

[module/spotify]
type = custom/script
exec =  ~/.config/polybar/scripts/spotify.sh %artist% - %title% 
exec-if = pgrep -x spotify
interval = 2
format-prefix = " "
format-background = #2fd566

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-foreground = ${colors.purple}
format-padding = 2

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0

format-connected-prefix = " "
format-connected = <label-connected>
format-connected-foreground = ${colors.orange}
format-connected-padding = 2
label-connected = %essid%
label-connected-alt = %local_ip%
format-disconnected =

[module/eth]
type = internal/network
interface = enp1s0
interval = 3.0

format-connected-foreground = ${colors.orange}
format-connected-padding = 2
label-connected = %local_ip%
format-disconnected =

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"
time = %H:%M
time-alt = %H:%M:%S
format-prefix = " "
format-foreground = ${colors.blue}
format-padding = 2
label = %date% %time%

[module/volume]
type = internal/volume

label-volume = %percentage%%
format-volume = <ramp-volume> <label-volume>
format-volume-foreground =   ${colors.aqua}
format-volume-padding = 2

format-muted-foreground = ${colors.comment}
label-muted = " MUTED"

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 98
warn-at = 25

format-charging-padding = 1
format-charging = <animation-charging> <label-charging>
format-charging-foreground = ${colors.foreground}

format-discharging-padding = ${self.format-charging-padding}
format-discharging = <ramp-capacity> <label-discharging>
format-discharging-foreground = ${self.format-charging-foreground}

format-full-padding = ${self.format-charging-padding}
format-full-prefix = " "
format-full-foreground = ${self.format-charging-foreground}

ramp-capacity-0 = 
ramp-capacity-0-foreground = ${colors.red}
ramp-capacity-1 = 
ramp-capacity-1-foreground = ${colors.foreground}
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 50

format = <ramp> <label>
format-foreground = ${colors.yellow}
format-warn = <ramp> <label-warn>
format-warn-foreground = ${colors.red}
format-warn-underline = ${self.format-warn-foreground}
format-padding = 2

label = %temperature%
label-warn = %temperature%

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 

[module/pkg]
type = custom/script
interval = 1800
format = <label>
format-foreground = ${colors.green}
label = "%output:0:30%"
exec = ~/.config/polybar/scripts/pkg.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"


[module/powermenu]
type = custom/menu

format-spacing = 2
format-padding = 1

label-open = ""
label-open-foreground = ${colors.red}
label-close =  cancel
label-close-foreground = ${colors.red}
label-separator = |
label-separator-foreground = ${colors.foreground}

menu-0-0 = logout
menu-0-0-exec = menu-open-1
menu-0-1 = reboot
menu-0-1-exec = menu-open-2
menu-0-2 = power off
menu-0-2-exec = menu-open-3

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = logout
menu-1-1-exec = pkill -kill -u hampus

menu-2-0 = cancel
menu-2-0-exec = menu-open-0
menu-2-1 = reboot
menu-2-1-exec = reboot

menu-3-0 = power off
menu-3-0-exec = poweroff
menu-3-1 = cancel
menu-3-1-exec = menu-open-0

[settings]
screenchange-reload = true

[global/wm]
margin-top = 5
margin-bottom = 5
